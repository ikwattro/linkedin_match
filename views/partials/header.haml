.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{ "data-toggle".to_sym => "collapse", "data-target".to_sym => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => '/'} Career Builder Matching
      .nav-collapse
        %ul.nav
          %li
            %a{:href => '/'}Home
          -unless current_user.nil?
            %li
              %a{:href => "/user/#{current_user.uid}/matches"}Matches
            %li
              %a{:href => "/user/#{current_user.uid}/skills"}Skills
            %li
              %a{:href => "/user/#{current_user.uid}/connections"}Connections
          %li
            %a{:href => '/jobs'}Jobs
          %li
            %a{:href => '/about'}About
        %p.navbar-text.pull-right
          -unless current_user.nil?
            .btn-group.pull-right
              %a.btn.dropdown-toggle{:'data-togle' => "dropdown", :href => "#"}
                %i.icon-user
                ="#{current_user.name}"
                %span.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "/user/#{current_user.uid}" } Profile
                %li
                  %a{:href => "/user/#{current_user.uid}/skills"}Skills
                %li
                  %a{:href => "/user/#{current_user.uid}/connections"}Connections
                %li
                  %a{:href => "/user/#{current_user.uid}/locations"} Locations
                %li.divider
                %li
                  %a{:href => "/logout" } Logout
          -else
            %a{:href => "/auth/linkedin"}
              %img{:src => "/images/signin_with_linkedin.png"}